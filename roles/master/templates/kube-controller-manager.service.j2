[Unit]
Description=Kubernetes Controller Manager
Documentation=https://github.com/kubernetes/kubernetes

[Service]
ExecStart={{k8s_bin_dir}}/hyperkube kube-controller-manager \
  --address=0.0.0.0 \
  --allocate-node-cidrs=true \
  --cluster-cidr={{k8s_cluster_cidr}} \
  --cluster-name={{k8s_cluster_name}} \
  --cluster-signing-cert-file={{k8s_ssl_dir}}/ca.pem \
  --cluster-signing-key-file={{k8s_ssl_dir}}/ca-key.pem \
  --leader-elect=true \
  --master=http://127.0.0.1:8080 \
  --root-ca-file={{k8s_ssl_dir}}/ca.pem \
  --service-account-private-key-file={{k8s_ssl_dir}}/ca-key.pem \
  --service-cluster-ip-range={{k8s_service_cidr}} \
  --v=2
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
